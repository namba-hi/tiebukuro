- if user_signed_in?
  - if current_user && @post.liked_by?(current_user.id)
    %span
      = link_to post_like_path(@post.liked_by?(current_user.id), post_id: @post.id), class:"showform__like__btndelete", id:"likebtn", method: :delete, remote: true do
        = icon('far', 'thumbs-up')
        = @post.likes.count
  - else
    %span
      = link_to post_likes_path(@post), class:"showform__like__btn", id:"likebtn", method: :post, remote: true do
        = icon('far', 'thumbs-up')
        = @post.likes.count